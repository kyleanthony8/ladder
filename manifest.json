{
    "manifest_version": 2,
    "name": "Ladder",
    "description": "Ladder enhances and simplifies your browsing experience on websites powered by major forum engines.",
    "version": "1.0",
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["js/vendor/jquery.js", "js/angular.min.js", "js/mousetrap.min.js", "js/mousetrap-bind-dictionary.min.js", "js/shared.js", "js/background.js"]
      }
    ],
    "browser_action": {
        "default_icon": "img/forum_orange.png"
    }
}

